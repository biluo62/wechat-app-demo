{
  "name": "koa-getting-started",
  "version": "1.0.0",
  "private": true,
  "description": "A sample Node.js app using Koa",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production && node server/server-prod.js",
    "dev": "npm run dll-dev && cross-env NODE_ENV=development && node server/server-dev.js",
    "build": "npm run dll-build && cross-env NODE_ENV=production && node ./server/server-prod.js",
    "dll-dev": "NODE_ENV=development webpack --config build/webpack/webpack.dll.conf.js --progress",
    "dll-build": "NODE_ENV=production webpack --config build/webpack/webpack.dll.conf.js --progress",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "ejs": "^2.5.6",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "koa-views": "^6.0.2",
    "leancloud-storage": "^3.0.2",
    "leanengine": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^1.11.0",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.less": [
      "stylelint --syntax less --fix",
      "git add"
    ]
  },
  "engines": {
    "node": "8.x"
  }
}
